<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_marginBottom="30dp"
    tools:context=".view.MainActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/poll_question_textview"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="100dp"
        android:textStyle="bold"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/poll_question_textview"
        android:layout_marginStart="100dp"
        android:id="@+id/radiogroup_pollchoice" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/error_textview"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/red"
        android:layout_below="@+id/radiogroup_pollchoice"
        android:textStyle="bold"
        android:layout_marginStart="100dp"
        android:visibility="gone"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/submit_button"
        android:padding="0dp"
        android:text="@string/submit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_above="@+id/poll_result_button"
        android:background="#000000"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/poll_result_button"
        android:padding="0dp"
        android:text="@string/show_result"
        style="?android:attr/borderlessButtonStyle"
        android:background="#000000"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>